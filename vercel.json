{
  "version": 2,
  "framework": null,
  "buildCommand": "chmod +x ./build-for-vercel.sh && ./build-for-vercel.sh",
  "outputDirectory": "dist",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/assets/(.*)", "dest": "/public/assets/$1" },
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico))", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "SERVER_ENV": "vercel"
  },
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}